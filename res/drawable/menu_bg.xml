<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape 
	    	android:shape="rectangle">
    	<gradient
        	android:startColor="#ff6101"
        	android:endColor="#d74c00"
        	android:angle="270"
        	android:height="40dp" />
    	<padding 
	        android:left="0dp"
        	android:top="0dp"
        	android:right="0dp"
        	android:bottom="0dp" />
    	<corners 
    	    android:radius="0dp" />
		</shape>
  </item>

 <item
	android:top="-6dp"
	android:left="-6dp"
	android:right="-6dp"
	android:bottom="0dp">
 
		<shape 
		    android:shape="rectangle">
			<solid 
		    	android:color="@null"/>
			<stroke
				android:width="1dp"
				android:color="#3d6423"/>
		</shape>
</item> 


</layer-list>